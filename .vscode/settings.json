{
	"typescript.preferences.importModuleSpecifier": "non-relative",
	"javascript.preferences.importModuleSpecifier": "non-relative",
	"typescript.updateImportsOnFileMove.enabled": "always",

	"editor.codeActionsOnSave": {
		"source.organizeImports": "always"
	},
	"files.exclude": {
		"dist": true
	},

	// Basic UI Bar Colors (Activity Bar, Status Bar, Title Bar) with Orange Tones & Text/Icon Color
	"workbench.colorCustomizations": {
		"activityBar.background": "#D2845A", // Soft orange background for the activity bar
		"activityBar.foreground": "#FFFFFF", // White text and icons in the activity bar
		"activityBar.inactiveForeground": "#F5E8DB", // Lighter color for inactive icons/text

		"statusBar.background": "#E09968", // Muted orange for the status bar
		"statusBar.foreground": "#FFFFFF", // White text in the status bar
		"statusBar.noFolderBackground": "#E09968", // Orange status bar when no folder is open
		"statusBar.noFolderForeground": "#FFFFFF", // White text when no folder is open

		"titleBar.activeBackground": "#D2845A", // Orange color for the active title bar
		"titleBar.activeForeground": "#FFFFFF", // White text for the active title bar
		"titleBar.inactiveBackground": "#E8B284", // Lighter orange for inactive title bar
		"titleBar.inactiveForeground": "#F5E8DB" // Lighter color for inactive title bar
	},
	"editor.formatOnSave": true,
	"biome.requireConfiguration": true,
	"editor.defaultFormatter": "biomejs.biome",
	"editor.defaultFoldingRangeProvider": "biomejs.biome",
	"notebook.defaultFormatter": "biomejs.biome",
	"files.insertFinalNewline": true,
	"[json]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[typescript]": {
		"editor.defaultFormatter": "biomejs.biome"
	}
}

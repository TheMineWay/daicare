{
	"typescript.preferences.importModuleSpecifier": "non-relative",
	"javascript.preferences.importModuleSpecifier": "non-relative",
	"typescript.updateImportsOnFileMove.enabled": "always",

	"editor.codeActionsOnSave": {
		"source.organizeImports": "always"
	},
	"files.exclude": {
		"dist": true
	},

	// Basic UI Bar Colors (Activity Bar, Status Bar, Title Bar) with Blue Tones & Text/Icon Color
	"workbench.colorCustomizations": {
		"activityBar.background": "#3A5A8F", // Soft blue background for the activity bar
		"activityBar.foreground": "#FFFFFF", // White text and icons in the activity bar
		"activityBar.inactiveForeground": "#D1D9E6", // Lighter color for inactive icons/text

		"statusBar.background": "#4C70A0", // Muted blue for the status bar
		"statusBar.foreground": "#FFFFFF", // White text in the status bar
		"statusBar.noFolderBackground": "#4C70A0", // Blue status bar when no folder is open
		"statusBar.noFolderForeground": "#FFFFFF", // White text when no folder is open

		"titleBar.activeBackground": "#3A5A8F", // Blue color for the active title bar
		"titleBar.activeForeground": "#FFFFFF", // White text for the active title bar
		"titleBar.inactiveBackground": "#5B7FA6", // Lighter blue for inactive title bar
		"titleBar.inactiveForeground": "#D1D9E6" // Lighter text color for inactive title bar
	},
	"editor.formatOnSave": true,
	"biome.requireConfiguration": true,
	"editor.defaultFormatter": "biomejs.biome",
	"editor.defaultFoldingRangeProvider": "biomejs.biome",
	"notebook.defaultFormatter": "biomejs.biome",
	"files.insertFinalNewline": true,
	"[json]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[typescript]": {
		"editor.defaultFormatter": "biomejs.biome"
	}
}
